extends layout

block content
    h1 Login
    form(method='POST' action='/users/login')        
        #form-group
            label Username:
            input.form-control(type="text" name='username' value= formData ? formData.username:'')
        #form-group
            label Password:
            input.form-control(type="password" name='password' value= formData ? formData.password:'')
        br
        input.btn.btn-primary(type='submit' value='Login')